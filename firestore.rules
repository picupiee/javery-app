rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // Helper function to check if user has buyer role
    function isBuyer() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.buyer == true;
    }
    
    // Helper function to check if user has seller role
    function isSeller() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.seller == true;
    }
    
    // Users collection - stores all user profiles with roles
    match /users/{userId} {
      // Anyone can read user profiles (for displaying seller info, etc.)
      allow read: if true;
      
      // Only the user can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Only the user can update their own profile
      allow update: if isOwner(userId);
      
      // Only the user can delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // Sellers collection - stores seller-specific data
    match /sellers/{sellerId} {
      // Anyone can read seller profiles (for buyer app)
      allow read: if true;
      
      // Only authenticated users can create seller profiles
      allow create: if isAuthenticated() && request.auth.uid == sellerId;
      
      // Only the seller can update their own profile
      allow update: if isOwner(sellerId);
      
      // Only the seller can delete their own profile
      allow delete: if isOwner(sellerId);
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      
      // Only sellers can create products
      allow create: if isSeller() && request.resource.data.sellerUid == request.auth.uid;
      
      // Only the product owner (seller) can update
      allow update: if isOwner(resource.data.sellerUid);
      
      // Only the product owner (seller) can delete
      allow delete: if isOwner(resource.data.sellerUid);
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Buyers can read their own orders, sellers can read orders for their products
      allow read: if isAuthenticated() && 
                     (request.auth.uid == resource.data.buyerUid || 
                      request.auth.uid == resource.data.sellerUid);
      
      // Only buyers can create orders
      allow create: if isBuyer() && request.resource.data.buyerUid == request.auth.uid;
      
      // Buyers and sellers can update orders (for status changes)
      allow update: if isAuthenticated() && 
                       (request.auth.uid == resource.data.buyerUid || 
                        request.auth.uid == resource.data.sellerUid);
      
      // Only buyers can delete their orders (before processing)
      allow delete: if isOwner(resource.data.buyerUid);
    }
    
    // Pings collection
    match /pings/{pingId} {
      // Anyone can read pings (for buyer app notifications)
      allow read: if true;
      
      // Only sellers can create pings
      allow create: if isSeller() && request.resource.data.sellerUid == request.auth.uid;
      
      // Only the ping owner can update
      allow update: if isOwner(resource.data.sellerUid);
      
      // Only the ping owner can delete
      allow delete: if isOwner(resource.data.sellerUid);
    }
    
    // Cart items (if stored in Firestore)
    match /carts/{userId}/items/{itemId} {
      // Only the user can read their cart
      allow read: if isOwner(userId);
      
      // Only the user can add to their cart
      allow create: if isOwner(userId);
      
      // Only the user can update their cart
      allow update: if isOwner(userId);
      
      // Only the user can delete from their cart
      allow delete: if isOwner(userId);
    }
  }
}
