rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // Helper function to check if user has buyer role (Simplified)
    function isBuyer() {
      return isAuthenticated(); 
    }
    
    // Helper function to check if user has seller role (Simplified)
    function isSeller() {
      return isAuthenticated();
    }
    
    // Users collection - stores all user profiles with roles
    match /users/{userId} {
      // Anyone can read user profiles (for displaying seller info, etc.)
      allow read: if true;
      
      // Only the user can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Only the user can update their own profile
      allow update: if isOwner(userId);
      
      // Only the user can delete their own profile
      allow delete: if isOwner(userId);
      
      // Addresses Subcollection
      match /addresses/{addressId} {
          allow read, write: if isOwner(userId);
      }
      
      // Cart Subcollection
      match /cart/{itemId} {
          allow read, write: if isOwner(userId);
      }
    }
    
    // Sellers collection - stores seller-specific data
    match /sellers/{sellerId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.auth.uid == sellerId;
      allow update: if isOwner(sellerId);
      allow delete: if isOwner(sellerId);
    }
    
    // Products collection
    match /products/{productId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.sellerUid == request.auth.uid;
      allow update: if isOwner(resource.data.sellerUid);
      allow delete: if isOwner(resource.data.sellerUid);
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Buyers can read their own orders, sellers can read orders for their products
      allow read: if isAuthenticated() && 
                     (request.auth.uid == resource.data.buyerUid || 
                      request.auth.uid == resource.data.sellerUid);
      
      // Only buyers can create orders
      allow create: if isBuyer() && request.resource.data.buyerUid == request.auth.uid;
      
      // Buyers and sellers can update orders (for status changes)
      allow update: if isAuthenticated() && 
                       (request.auth.uid == resource.data.buyerUid || 
                        request.auth.uid == resource.data.sellerUid);
      
      // Only buyers can delete their orders (before processing)
      allow delete: if isOwner(resource.data.buyerUid);
    }
    
    // Pings collection
    match /pings/{pingId} {
      allow read: if true;
      allow create: if isSeller() && request.resource.data.sellerUid == request.auth.uid;
      allow update: if isOwner(resource.data.sellerUid);
      allow delete: if isOwner(resource.data.sellerUid);
    }
  }
}
